<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ProfileDetailsFragment"
    android:paddingTop="20dp"
   >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_first_title"
        android:textColor="@color/black"
        android:textSize="@dimen/tabs_content_title_font_size"
        android:paddingLeft="10dp"
        />

    <TextView
        android:id="@+id/link_to_biography_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="50dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/tabs_content_link_font_size"
        android:text="@string/link_to_biography_edit_title"/>

    <TextView
        android:id="@+id/link_to_settings_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="50dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/tabs_content_link_font_size"
        android:text="@string/link_to_settings_edit_title"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>